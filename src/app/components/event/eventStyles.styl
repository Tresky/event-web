.chat,
.timeline
  list-style none

.chat 
  margin 0
  padding 0

.chat li 
  margin-bottom 10px
  padding-bottom 5px
  border-bottom 1px solid #999

.chat li.left .chat-body 
  margin-left 60px

.chat li.right .chat-body 
  margin-right 60px

.chat li .chat-body p 
  margin 0

.chat .glyphicon,
.panel .slidedown .glyphicon 
  margin-right 5px

.chat-panel .panel-body 
  height 350px
  overflow-y scroll

.top-buffer 
  margin-top 20px

.rating
  font-size 30px

.img-center 
  margin 0 auto

.panel-gray
  background-color #333